@media ( min-width 1024px )
  header
    width 100vh
  .navItem
    width 120px
  .navBtn
    display none
  .navBlock:hover
    background-color unset
  .navItemTitle
    color var(--theme-text-light)
    &::before
      height 100%
      top 0
      box-sizing border-box
  .navItemList
    width max-content
    min-width 100px
    position absolute
    background-color var(--theme-bg-hover)
    .navItem
      width 100%
      padding 0
      .navItemTitle
        box-sizing border-box
        color var(--theme-highlight)
      a:hover .navItemTitle
        color var(--theme-text-hover)
      &:hover>.navItemTitle
        background-color var(--theme-highlight)
        color var(--theme-text-hover)
  .navBlock,
  .navItem
    &:hover
      extendList()

